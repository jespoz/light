blanco = #FFF
marron = #AC291F
verde = #4D9379
naranjo = #E3713B
amarillo = #E5C730
cafe = #86663E
gris = #5D5D5D

.callout
    border 0
    bottom -5px
    display none
    left 49px
    position absolute
    z-index 9999

.container-fluid
    margin-bottom 15px

.panel
    .panel-body
        font-weight 300
        padding 10px 15px
        i
            color verde
            font-size 30px
        span
            color verde
            margin-top 5px
            &.periodo
                color naranjo
                font-size 15px
                font-weight 300
                margin-top 0
                text-align right
                p
                    margin-bottom 0
                .result
                    color verde
                    font-family "Open Sans", sans-serif
                    font-size 40px
                    font-weight 300
        .highcharts-axis
            path
                stroke-opacity 0
    .panel-heading
        background-color #275CA8
        border-color #275CA8
        font-family "Open Sans", sans-serif
        font-weight 300
        padding 5px 15px
        text-align right
        span
            a
                color verde
                font-size 14px
                margin-right 10px
            i
                color blanco
                font-size 20px
                margin-top 5px
            &.pull-left
                margin-top -5px
            &.pull-right
                padding-top 8px

.smart-timeline
    position relative
    li
        position relative
        margin 0
        padding 15px 0

.smart-timeline-content
    border-radius 5px
    height 100%
    margin-left 150px
    margin-right 30px
    .content
        background-color blanco
        max-height 300px
        padding 20px
        padding-bottom 0
        #base, #verde, #rojo
            position absolute
            left 0
            top 0
        #porcentaje
            font-family "Open Sans", sans-serif
            font-size 40px
            font-weight 300
        h4
            color naranjo
            font-family "Open Sans", sans-serif
            font-size 25px
            font-weight 300
            margin-top 0
        p
            color verde
            font-family "Open Sans", sans-serif
            font-size 14px
            font-weight 300
            max-height 300px
        .col-md-3
            text-align center
            img
                margin-bottom 10px
                margin-left auto
                margin-right auto
                max-height 120px
        .col-md-9
            border-left solid 1px verde
        &:before
            border-width 10px
            top 13%

.smart-timeline-footer
    background-color #D8EDE5
    border-bottom 1px solid #DDD
    border-left 1px solid #DDD
    border-right 1px solid #DDD
    border-bottom-left-radius 5px
    border-bottom-right-radius 5px
    height 30px
    margin-left -1px
    margin-right -21px
    margin-bottom -10px
    span
        padding-top 3px
        a
            color verde
            font-size 14px
            margin-right 10px
        i
            color verde
            font-size 25px
            padding-left 20px
        &.pull-right
            padding-top 8px

.smart-timeline-icon
    background none repeat scroll 0 0 verde
    border-radius 50%
    -webkit-box-shadow 0 0 0 5px #75B39B;
    -moz-box-shadow 0 0 0 5px #75B39B;
    box-shadow 0 0 0 5px #75B39B;
    color blanco
    font-size 14px
    height 40px
    left 78px
    line-height 28px
    padding 2px
    position absolute
    text-align center
    top 10px
    width 40px
    z-index 100
    i
        font-size 18px
        padding-top 8px

.smart-timeline-list
    list-style outside none none
    margin 0
    padding 0
    &:after
        content ''
        background-color blanco
        position absolute
        display block
        width 5px
        top 0
        left 95px
        bottom 0
        z-index 1

.smart-timeline-time
    float left
    margin-top 9px
    text-align right
    width 70px
    span
        color verde !important
        font-family "Open Sans", sans-serif
        font-size 14px
        margin-right 10px

.tooltip
    background-color #fffAF0
    border 1px solid #DCA
    border-radius 5px
    box-shadow 5px 5px 8px #CCC
    display none
    height 80px
    margin-left 60px
    margin-top -50px
    opacity 1
    width 300px
    article
        padding 5px
        padding-left 10px
        p
            font-size 12px !important
            line-height 13px
            margin-bottom 5px
            b
                width 100px

.tooltip-right
    background-color #fffAF0
    border 1px solid #DCA
    border-radius 5px
    box-shadow 5px 5px 8px #CCC
    display none
    height 80px
    margin-left -60px
    margin-top -50px
    opacity 1
    width 300px
    article
        padding 5px
        padding-left 10px
        p
            font-size 12px !important
            line-height 13px
            margin-bottom 5px
            b
                width 100px

.well
    background #F5F5F5
    border 1px solid #DDD
    -webkit-box-shadow 0 1px 1px #ECECEC
    -moz-box-shadow 0 1px 1px #ECECEC
    box-shadow 0 1px 1px #ECECEC
    position relative